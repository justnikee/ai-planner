generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  pending
  done
}

model Task {
  id         String     @id @default(uuid()) @db.Uuid
  userId     String     @map("user_id") @db.Uuid
  title      String
  due_at     DateTime?
  status     TaskStatus @default(pending)
  created_at DateTime   @default(now())

  @@map("tasks")
}
